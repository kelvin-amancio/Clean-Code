@model Clean.Application.Dtos.ProductDTO
@{
    ViewData["Title"] = "Details - products";
}

    <div class="form-group mb-3">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input readonly asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input readonly asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input readonly asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Stock" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input readonly asp-for="Stock" class="form-control">
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
    </div>

<div class="form-group mb-3">
    <label asp-for="Image" class="col-md-2 control-label"></label>
</div>

@if (!ViewBag.ImageExist)
{
    <img src="~/images/noimage.jpg" class="rounded-circle" height="300" width="300" asp-append-version="true" />
}else{
    <img src="~/images/@Model.Image" class="rounded-circle" height="300" width="300" asp-append-version="true" />
}


   <div class="form-group mb-3">
      <label asp-for="Category!.Name" class="col-md-2 control-label"></label>
     <div class="col-md-10">
        <input readonly asp-for="Category!.Name" class="form-control">
        <span asp-validation-for="Category!.Name" class="text-danger"></span>
    </div>
   </div>

    <a href="@Url.Action("Index","Products")" title="Details" class="btn btn-secondary">
        <span class="fas fa-search">Back</span>
    </a>
